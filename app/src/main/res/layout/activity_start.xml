<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@drawable/background_gradient"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Name your place"
        android:textSize="@dimen/textSixe_20sp"
        android:textColorHint="#ffffffff"
        android:background="#25ffffff"
        android:layout_marginTop="167dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nice to meet you!"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="30sp"
        android:id="@+id/welcomeToStart"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="565dp"
        android:layout_marginStart="565dp"
        android:layout_marginBottom="105dp"/>
</RelativeLayout>